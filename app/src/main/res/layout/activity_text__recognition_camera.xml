<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="textrecognition.blog.com.textrecognition.text_Recognition_camera">



    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/surface_view"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:layout_above="@id/camera_txt"
        android:text="click"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/surface_view"
        android:text="there's no text"
        android:textSize="13dp"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/camera_txt"
        android:gravity="center"/>

</RelativeLayout>
